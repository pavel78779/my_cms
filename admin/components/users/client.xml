<?xml version="1.0" encoding="utf-8"?>
<component name="users">
    <section name="users" title="Пользователи">
        <show title="Все пользователи">
            <ContentTable>
                <change_ordering disabled="disabled" />
                <columns>
                    <column title="Имя пользователя" type="name" name="name"/>
                    <column title="Логин" name="username" />
                    <column title="E-mail" name="email" />
                    <column title="Дата регистрации" type="date" name="register_date" />
                    <column title="ID" type="id" name="id"/>
                </columns>
            </ContentTable>
        </show>
        <edit title="Редактирование пользователя" onsuccess="Пользователь &quot;%name%&quot; изменен">
            <ContentForm>
                <fieldset title="Параметры пользователя">
                    <field title="Имя пользователя" type="text" name="name" required="required" />
                    <field title="Логин" type="text" name="username" required="required" />
                    <field title="E-mail" type="text" name="email" required="required" />
                    <field title="Пароль" type="comUsersChangePasswordButton" text="Изменить" />
                </fieldset>
            </ContentForm>
        </edit>
    </section>
</component>