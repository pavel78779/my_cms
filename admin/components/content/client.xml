<?xml version="1.0" encoding="utf-8"?>
<component name="content">
	<section name="articles" title="Статьи">
        <show title="Управление статьями">
            <ContentTable>
                <change_ordering group_by="category" />
                <columns>
                    <column title="Название" type="name" name="name"/>
                    <column title="Опубликовано" type="switch" name="published" />
                    <column title="Порядок" type="ordering" name="ordering" />
                    <column title="Дата создания" type="date" name="creation_date" />
                    <column title="Категория" name="category" replaced="url:admin/index.php?com=content&amp;section=categories&amp;action=get&amp;fields=id,name" />
                    <column title="ID" type="id" name="id"/>
                </columns>
            </ContentTable>
        </show>
        <new title="Создание новой статьи" onsuccess="Статья &quot;%name%&quot; создана">
            <ContentForm>
                <fieldset title="Параметры статьи">
                    <field title="Название"     type="text"         name="name"      required="required" tooltip="название статьи" />
                    <field title="Опубликовано" type="switch"       name="published" required="required" tooltip="будет ли статья опубликована на сайте"/>
                    <field title="Порядок"      type="normal_text"  name="ordering"    text="последняя"    tooltip="новая статья по умолчанию располагается последней,&lt;br /&gt;изменить порядок вы можете на странице списка всех статей" />
                    <field title="Категория" type="hierarchySelect" name="category">
                        <options from_url="admin/index.php?com=content&amp;section=categories&amp;action=get&amp;fields=id,name,parent">
                            <option value="0" title="БЕЗ КАТЕГОРИИ" />
                        </options>
                    </field>
                    <field title="Текст статьи" type="editor" name="content" />
                </fieldset>
            </ContentForm>
        </new>
        <delete onsuccess="%count% стат%(ья|ьи|ей)% успешно удален%(а|ы|ы)%" confirm="Вы действительно хотите безвозвратно удалить выбранные статьи?" />
        <edit title="Редактирование статьи" onsuccess="Статья &quot;%name%&quot; изменена" />
	</section>
	<section name="categories" title="Категории">
        <show title="Управление категориями">
            <HierarchyTable>
                <columns>
                    <column title="Название" type="name" name="name"/>
                    <column title="Опубликовано" type="switch" name="published" />
                    <column title="Родитель" name="parent" />
                    <column title="Порядок" name="ordering" type="ordering" />
                    <column title="ID" type="id" name="id"/>
                </columns>
            </HierarchyTable>
        </show>
        <new title="Создание новой категории" onsuccess="Категория &quot;%name%&quot; создана">
            <ContentForm>
                <fieldset title="Параметры категории">
                    <field title="Название" type="text" name="name" required="required" tooltip="название категории"/>
                    <field title="Опубликовано" type="switch" name="published" required="required" tooltip="будет ли категория опубликована на сайте"/>
                    <field title="Родительская категория" type="hierarchySelectForParent" name="parent">
                        <options from_url="admin/index.php?com=content&amp;section=categories&amp;action=get&amp;fields=id,name,parent">
                            <option value="0" title="ВЕРХНИЙ УРОВЕНЬ" />
                        </options>
                    </field>
                    <field title="Описание категории" type="editor" name="description" />
                </fieldset>
            </ContentForm>
        </new>
        <delete onsuccess="%count% категори%(я|и|й)% успешно удален%(а|ы|ы)%" confirm="При удалении категории удалятся и все ее вложенные категории. Продолжить?" />
        <edit title="Редактирование категории" onsuccess="Категория &quot;%name%&quot; изменена" />
	</section>
</component>